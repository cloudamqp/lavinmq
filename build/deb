#!/bin/bash
set -euo pipefail

. /etc/os-release
NAME=avalanchemq

pkg_version=${1:-$(git describe --tags | cut -c2- )}
pkg_revision=${2:-1}
architecture=${3:-$(dpkg --print-architecture)}

shards build --stats --production --debug $NAME
mv bin/$NAME bin/$NAME-debug

shards build --stats --production --no-debug --release
strip bin/*

mkdir debroot
cd debroot

mkdir -p usr/bin usr/share/doc/$NAME lib/systemd/system/ etc/$NAME usr/share/man/man1
cp ../bin/* usr/bin/
cp ../README.md usr/share/doc/$NAME/README
cp ../CHANGELOG.md usr/share/doc/$NAME/changelog
gzip -9 -n usr/share/doc/avalanchemq/changelog
cp ../NOTICE usr/share/doc/$NAME/
cp ../extras/avalanchemq.service lib/systemd/system
cp ../extras/config.ini etc/$NAME/$NAME.ini

cat > usr/share/doc/$NAME/changelog.Debian << EOF
$NAME ($pkg_version-$pkg_revision) whatever; urgency=medium

  * New upstream release. Closes: #00000

 -- 84codes <contact@84codes.com>  Wed, 17 Apr 2019 18:01:24 +0000
EOF
gzip -9 -n usr/share/doc/$NAME/changelog.Debian
cat > usr/share/doc/$NAME/copyright << EOF
Format: https://www.debian.org/doc/packaging-manuals/copyright-format/1.0/
Upstream-Name: AvalancheMQ
Upstream-Contact: contact@84codes.com
Source: https://github.com/cloudamqp/avalanchemq
Files: *
Copyright: 2019, 84codes AB
License: Apache-2.0
EOF

help2man -Nn "fast and advanced message queue server" usr/bin/avalanchemq > usr/share/man/man1/avalanchemq.1
help2man -Nn "control utility for avalanchemq server" usr/bin/avalanchemqctl > usr/share/man/man1/avalanchemqctl.1
help2man -Nn "performance testing tool for amqp servers" usr/bin/avalanchemqperf > usr/share/man/man1/avalanchemqperf.1
gzip -9 -n usr/share/man/man1/avalanchemq.1
gzip -9 -n usr/share/man/man1/avalanchemqctl.1
gzip -9 -n usr/share/man/man1/avalanchemqperf.1
cp usr/share/man/man1/avalanchemq.1.gz usr/share/man/man1/avalanchemq-debug.1.gz

mkdir DEBIAN
find . -type f -not -path "./DEBIAN/*" -print0 | xargs -0 md5sum > DEBIAN/md5sums

cat > DEBIAN/conffiles << EOF
/etc/avalanchemq/avalanchemq.ini
EOF

cat > DEBIAN/control << EOF
Package: avalanchemq
Version: $pkg_version-$pkg_revision
Homepage: https://github.com/cloudamqp/avalanchemq
Section: net
Priority: optional
Architecture: $architecture
Depends: systemd,adduser,$(ldd ../bin/* | awk '/=>/ {print $3}' | xargs dpkg -S | awk -F: "/$architecture/ { print \$1 }" | sort -u | paste -sd,)
Installed-Size: $(du -ks usr | cut -f1)
Maintainer: CloudAMQP <contact@cloudamqp.com>
Description: message queue server that implements the AMQP 0-9-1 protocol
 Aims to be very fast, have low RAM requirements,
 handle very long queues, many connections and
 require minimal configuration.

EOF

cat > DEBIAN/postinst << EOF
#!/bin/sh -e
adduser --system --group --quiet --no-create-home --home /nonexistent avalanchemq
install --owner=avalanchemq --group=avalanchemq --mode=750 --directory /var/lib/avalanchemq
deb-systemd-helper enable avalanchemq.service
deb-systemd-invoke start avalanchemq.service
EOF
chmod +x DEBIAN/postinst

cat > DEBIAN/prerm << EOF
#!/bin/sh -e
deb-systemd-invoke stop avalanchemq.service
deb-systemd-helper purge avalanchemq.service
EOF
chmod +x DEBIAN/prerm

cd ..

debdir=builds/$ID/$VERSION_CODENAME
debname=${NAME}_${pkg_version}-${pkg_revision}_${architecture}.deb
mkdir -p "$debdir"

echo 2.0 > debian-binary
tar c --directory debroot/DEBIAN . | gzip -9 > control.tar.gz
tar c --directory debroot --exclude=./DEBIAN . | gzip -9 > data.tar.gz
ar rc "$debdir/$debname" debian-binary control.tar.gz data.tar.gz

#lintian "$debdir/$debname" || true
