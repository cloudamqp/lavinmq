{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".cr\"))' | xargs -r crystal tool format"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".cr\"))' | xargs -r lib/ameba/bin/ameba --silent --fix"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".js\"))' | xargs -r npx standard --fix"
          }
        ]
      }
    ]
  }
}
